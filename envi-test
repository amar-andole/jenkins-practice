pipeline {
    agent any
    environment {
        TEST = "123"
        TEST1 = "456"
    }
    stages {
        stage ('build') {
        steps {
            sh '''
        echo "$TEST"
        sleep 5
        '''
        }
        }
        stage ('test') {
        steps {
            echo ${env.TEST}  //java grrovy to echo env variable
        }
        }
    }
  }