pipeline {
    agent any
     parameters { 
        string(name: 'PARAM-STRING',
        defaultValue: 'Input-parameter', 
        description: 'This is a string parameter')
         }
         stages {
            stage ('build') {
                steps {
                    sh '''
                    echo $PARAM-STRING
                    sleep 5
                    '''
                }
            }
            stage ('test') {
                steps {
                   script {
                    echo $"{params.PARAM-STRING}"
                   }
                }
            }
         }
}