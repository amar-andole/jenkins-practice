pipeline {
    agent any
     parameters { 
        string(name: 'PARAM',
        defaultValue: 'Input-parameter', 
        description: 'This is a string parameter')
         }
         stages {
            stage ('build') {
                steps {
                    sh '''
                    echo $PARAM
                    sleep 5
                    '''
                }
            }
            stage ('test') {
                steps {
                echo "${params.PARAM}"
                }
            }
         }
}